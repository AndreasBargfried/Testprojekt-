 REM Erzeugung Sendebericht

FUNCTION VSNRPackS$(VSNR$)
 tVSNR$ = ""
 FOR a% = 1 TO LEN (VSNR$)
   tC$ = MID$ (VSNR$,a%,1)
         x% = ASC ( LEFT$ ( UCASE$ (tC$),1))
         SELECT CASE tc$
           CASE "é"
             tC$ = "AE"
           CASE "ô"
             tC$ = "OE"
           CASE "ö"
             tC$ = "UE"
           CASE "Ñ"
             tc$ = "ae"
           CASE "î"
             tc$ = "oe"
           CASE "Å"
             tc$ = "Åe"
           CASE "·"
             tc$ = "ss"
         END SELECT 
   REM SELECT CASE tC$
   REM CASE "A" TO "Z","0" TO "9"
     tVSNR$ = tVSNR$ + tC$
   REM END SELECT 
 NEXT a%
 VSNRPackS$ = tVSNR$
 END FUNCTION 


